    "version": "0.2.0",
    "configurations": [
        {
            "type": "rdbg",
            "name": "Debug Rails",
            "request": "launch",
            "command": "foreman",
            "script": "start",
            "args": [
                "-f",
                "Procfile.dev"
            ],
            "env": {
                "RAILS_ENV": "development",
                "PORT": "3000",
                "RUBY_DEBUG_OPEN": "true",
            },
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        }
    ]
}