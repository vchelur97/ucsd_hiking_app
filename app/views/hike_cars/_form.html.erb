<%= form_with model: [ @hike, @hike_car ], class: "mt-4 rounded-lg justify-center flex mx-auto" do |form| %>
  <table class="w-full justify-center bg-white text-sm text-center text-gray-500" cellspacing="0">
    <thead class="bg-gray-50 text-gray-900 font-medium">
      <tr class="px-4 xl:grid xl:grid-cols-11 py-4">
        <th scope="col" class="hidden xl:block xl:col-span-2">Car</th>
        <th scope="col" class="hidden xl:block">Spots</th>
        <th scope="col" class="hidden xl:block xl:col-span-2">Pickup@Time</th>
        <th scope="col" class="hidden xl:block xl:col-span-2">Pickup Address</th>
        <th scope="col" class="hidden xl:block">Compensation</th>
        <th scope="col" class="hidden xl:block xl:col-span-2">Note</th>
        <th scope="col" class="hidden xl:block"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100 border-t border-gray-100">
      <tr class="hover:bg-gray-50 xl:grid xl:grid-cols-11 xl:gap-2 py-4 font-normal text-gray-900">
        <td class="py-2 grid grid-cols-3 gap-3 xl:flex xl:gap-0 xl:col-span-2">
          <%= form.label :car_id, class: "flex font-medium justify-center items-center xl:hidden" %>
          <%= form.select :car_id, @user.cars.map{ |c| [c.make + ' ' + c.model, c.id] }, {}, { :class =>"col-span-2 xl:w-full rounded-md border-gray-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:bg-gray-50" } %>
        </td>
        <td class="py-2 grid grid-cols-3 gap-3 xl:flex xl:gap-0">
          <%= form.label :spots_available, "Spots", class: "flex font-medium justify-center items-center xl:hidden" %>
          <%= form.number_field :spots_available, class:"col-span-2 xl:w-full rounded-md border-gray-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 text-sm" %>
        </td>
        <td class="py-2 grid grid-cols-3 gap-3 xl:flex xl:gap-0 xl:col-span-2">
          <%= form.label :pickup_time, "Pickup@ Time", class: "flex font-medium justify-center items-center xl:hidden" %>
          <%= form.text_field :pickup_time, placeholder: "PC Loop@9:30AM", class:"col-span-2 xl:w-full rounded-md border-gray-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 text-sm"%>
        </td>
        <td class="py-2 grid grid-cols-3 gap-3 xl:flex xl:gap-0 xl:col-span-2">
          <%= form.label :pickup_address, "Pickup Address", class: "flex font-medium justify-center items-center xl:hidden" %>
          <%= form.text_field :pickup_address, placeholder: "Google maps link", class:"col-span-2 xl:w-full rounded-md border-gray-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 text-sm"%>
        </td>
        <td class="py-2 grid grid-cols-3 gap-3 xl:flex xl:gap-0">
          <%= form.label :compensation, class: "flex font-medium justify-center items-center xl:hidden" %>
          <%= form.number_field :compensation, value: number_to_currency(form.object.compensation.to_f, delimiter: '', unit: '$'), step: 0.5, placeholder: "$/person", class:"col-span-2 xl:w-full rounded-md border-gray-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 text-sm"%>
        </td>
        <td class="py-2 grid grid-cols-3 gap-3 xl:flex xl:gap-0 xl:col-span-2">
          <%= form.label :note, class: "flex font-medium justify-center items-center xl:hidden" %>
          <%= form.text_field :note, class:"col-span-2 xl:w-full rounded-md border-gray-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 text-sm", placeholder: "Note for passengers"%>
        </td>
        <td class="py-2 h-16 grid grid-cols-3 gap-3 xl:flex xl:gap-0">
          <%= form.submit "Add car", class: "col-start-2 col-span-2 xl:w-full rounded-lg px-2 bg-blue-500 hover:bg-blue-600 text-white cursor-pointer" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
