<div id="<%= dom_id hike_car %>" class="mx-4 my-6 overflow-hidden rounded-lg border border-gray-200 shadow-md">
  <table class="w-full items-center justify-center bg-white text-sm text-center text-gray-500">
    <thead class="bg-gray-50 text-gray-900 font-medium">
      <tr class="px-4 grid grid-cols-2 xl:grid-cols-4">
        <th class="py-2 flex justify-center gap-3 items-center">
          <%= render "avatar", user: hike_car.car.user %>
          <div>
            <div class="text-gray-700"><%= hike_car.car.user.full_name %></div>
            <div class="text-gray-400"><%= number_to_phone(hike_car.car.user.phone_no, area_code: true) %></div>
          </div>
        </th>
        <th class="py-2 flex justify-center items-center">
          <div>
            <div class="text-gray-700"><%= hike_car.car.make + ' ' + hike_car.car.model %></div>
            <div class="text-gray-400"><%= hike_car.car.color %></div>
          </div>
        </th>
        <th class="py-2 flex justify-center items-center">
          <%= link_to hike_car.pickup_time, hike_car.pickup_address, class: "text-primary-500" %>
        </th>
        <th class="py-2 flex justify-center items-center">
          <%= number_with_precision(hike_car.compensation, precision: 2) %>$ per person
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100 border-t border-gray-100">
      <%= render hike_car.participants %>
    </tbody>
    <% if @user.driver?(hike_car) %>
      <tfoot>
        <tr class="px-4">
          <td colspan="4" class="py-4">
            <%= link_to "Edit details", edit_hike_hike_car_path(hike_car.hike, hike_car), class: "rounded-lg py-3 px-5 bg-gray-100 hover:bg-gray-200 inline-block font-medium" %>
            <%= link_to "Remove car from hike", hike_hike_car_path(hike_car.hike, hike_car), data: {turbo_method: :delete, turbo_frame: "_top", turbo_confirm: "Are you sure you want to delete this carpool?"}, class: "inline-block ml-2 rounded-lg py-3 px-5 bg-red-100 hover:bg-red-200 font-medium" %>
          </td>
        </tr>
      </tfoot>
    <% end %>
    <% if hike_car.participants.length < hike_car.spots_available.to_i %>
      <tfoot>
        <tr class="px-4">
          <td colspan="4" class="py-4">
            <%= turbo_frame_tag "new_" + dom_id(hike_car) + "_participant", src: new_hike_hike_car_hike_participant_path(hike_car.hike, hike_car), target: "_top" %>
          </td>
        </tr>
      </tfoot>
    <% end %>
  </table>
</div>
