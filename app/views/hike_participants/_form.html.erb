<%= form_with model: [ @hike_car, @hike_participant ], class: "px-4 grid grid-cols-2 xl:grid-cols-4" do |form| %>
  <div class="py-2 flex justify-center gap-3 items-center">
    <%= render "avatar", user: @user %>
    <div>
      <div class="text-gray-700"><%= @user.preferred_name.present? ? @user.preferred_name : @user.full_name %></div>
      <div class="text-gray-400"><%= number_to_phone(@user.phone_no, area_code: true) %></div>
    </div>
  </div>
  <div class="py-2 xl:col-span-2 flex justify-center gap-3 items-center">
    <%= form.label :note, class: "flex font-medium justify-center items-center hidden" %>
    <%= form.text_field :note, placeholder: "Note for the driver", class:"col-span-2 xl:w-full rounded-md border-gray-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 text-sm" %>
  </div>
  <%= form.hidden_field :user_id, value: @user.id %>
  <div class="py-2 col-start-2 xl:col-start-4 flex justify-center items-center">
    <% if edit %>
      <%= form.submit "Update", class: "h-12 rounded-lg px-2 bg-gray-500 hover:bg-gray-600 text-white cursor-pointer" %>
    <% else %>
      <%= form.submit "Join hike", class: "h-12 rounded-lg px-2 bg-blue-500 hover:bg-blue-600 text-white cursor-pointer" %>
    <% end %>
  </div>
<% end %>
