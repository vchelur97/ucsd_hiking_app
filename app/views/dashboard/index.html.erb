<div class="w-11/12 mx-auto">
  <% if user.admin? %>
    <div class="mt-4">
      <h1 class="font-bold text-2xl mb-4 text-center">Review Hikes</h1>
      <div id="review_hikes" class="min-w-full flex flex-wrap gap-5">
        <% if @review_hikes.empty? %>
          <p class="text-gray-500">No hikes to review</p>
        <% end %>
        <% @review_hikes.each do |hike| %>
          <%= render "hikes/hike_card", hike: hike %>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @draft_hikes.any? %>
    <div class="mt-4">
      <h1 class="font-bold text-2xl mb-4 text-center">Draft Hikes</h1>
      <div id="draft_hikes" class="min-w-full flex flex-wrap gap-5">
        <% @draft_hikes.each do |hike| %>
          <%= render "hikes/hike_card", hike: hike %>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="mt-4">
    <h1 class="font-bold text-2xl mb-4 text-center">Upcoming Hikes</h1>
    <%#= link_to "New hike", new_hike_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <div id="upcoming_hikes" class="min-w-full flex flex-wrap gap-5">
      <% if @upcoming_hikes.empty? %>
        <p class="text-gray-500">No upcoming hikes</p>
      <% end %>
      <% @upcoming_hikes.each do |hike| %>
        <%= render "hikes/hike_card", hike: hike %>
      <% end %>
    </div>
  </div>
</div>
